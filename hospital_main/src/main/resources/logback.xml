<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Hibernate 트랜잭션 관련 디버그 로그 끄기 -->
    <logger name="org.hibernate.resource.transaction" level="WARN"/>
    <logger name="org.hibernate.internal" level="WARN"/>
    
    <!-- Spring Data JPA 관련 디버그 로그 끄기 -->
    <logger name="org.springframework.data.jpa" level="WARN"/>
    <logger name="org.springframework.orm.jpa" level="WARN"/>
    
    <!-- Hibernate 전체 로그 레벨 조정 -->
    <logger name="org.hibernate" level="WARN"/>
    
    <!-- Spring 프레임워크 로그 레벨 조정 -->
    <logger name="org.springframework" level="INFO"/>
    
    <!-- 프로젝트 패키지는 DEBUG 유지 -->
    <logger name="com.hospital" level="DEBUG"/>

    <root level="INFO">  <!-- DEBUG → INFO로 변경 -->
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>